{
	"name": "@piggly/secrets",
	"version": "0.5.0",
	"description": "An ESM/CommonJS library to better manage local secrets.",
	"type": "module",
	"scripts": {
		"clean": "rimraf dist",
		"pre:commit": "npm run lint && npm run format && npm run check",
		"prebuild": "npm run lint && npm run format && npm run check",
		"build": "npm run clean && npm run build:types && npm run build:esm && npm run build:cjs && node fixPackages.cjs",
		"build:esm": "babel ./src --out-dir ./dist/esm --extensions \".ts\" --config-file ./babel.esm.json",
		"build:cjs": "babel ./src --out-dir ./dist/cjs --extensions \".ts\" --config-file ./babel.cjs.json",
		"build:types": "tsc -p tsconfig.types.json && tsc-alias -p tsconfig.types.json && node fixPaths.cjs && node fixTypes.cjs",
		"format": "prettier --write \"./src/**/*.ts\"",
		"check": "tsc --noEmit -p tsconfig.json",
		"lint": "eslint --fix ./src/**",
		"test": "cross-env NODE_ENV=test jest --coverage --watchAll",
		"test:once": "cross-env NODE_ENV=test jest --passWithNoTests --bail",
		"test:debug": "cross-env NODE_ENV=test node --inspect ./node_modules/.bin/jest --runInBand",
		"preversion": "npm run build",
		"postversion": "git push --follow-tags",
		"prepublish": "npm run build",
		"prepublishOnly": "npm run format && npm run lint",
		"prepare": "husky"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"default": "./dist/esm/index.js"
		}
	},
	"bin": {
		"pglysecrets": "./dist/esm/bin/index.js"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"keywords": [
		"secrets",
		"crypto",
		"encrypt",
		"decrypt",
		"bip39",
		"mnemonic",
		"password",
		"key",
		"manager",
		"local"
	],
	"author": {
		"name": "Caique Araujo",
		"email": "caique@piggly.com.br",
		"url": "https://github.com/caiquearaujo"
	},
	"license": "MIT",
	"homepage": "https://github.com/piggly-dev/js-secrets#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/piggly-dev/js-secrets.git"
	},
	"bugs": {
		"url": "https://github.com/piggly-dev/js-secrets/issues"
	},
	"devDependencies": {
		"@babel/cli": "^7.28.3",
		"@babel/core": "^7.28.4",
		"@babel/preset-env": "^7.28.3",
		"@babel/preset-typescript": "^7.27.1",
		"@types/jest": "^30.0.0",
		"@types/pump": "^1.1.3",
		"@typescript-eslint/eslint-plugin": "^8.42.0",
		"@typescript-eslint/parser": "^8.42.0",
		"@zerollup/ts-transform-paths": "^1.7.18",
		"babel-jest": "^30.1.2",
		"babel-plugin-add-import-extension": "^1.6.0",
		"babel-plugin-module-resolver": "^5.0.2",
		"babel-plugin-transform-import-meta": "^2.3.3",
		"cross-env": "^10.0.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-perfectionist": "^4.15.0",
		"eslint-plugin-prettier": "^5.5.4",
		"husky": "^9.1.7",
		"jest": "^30.1.3",
		"prettier": "^3.6.2",
		"pump": "^3.0.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.4.1",
		"tsc-alias": "^1.8.16",
		"tslib": "^2.8.1",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.42.0"
	},
	"dependencies": {
		"@noble/curves": "^2.0.0",
		"@noble/hashes": "^2.0.0",
		"bip39": "^3.1.0",
		"chalk": "^5.6.0",
		"commander": "^14.0.0",
		"slugify": "^1.6.6"
	},
	"engine": {
		"node": ">=18"
	}
}
